@using Sandbox;
@using Sandbox.UI;
@inherits Panel
@namespace Undercooked.UI

<root>
    <div class="glyph">
        <Image Texture="@GetInputGlyph()" class="glyph-image" />
    </div>
    <span class="text">
        @Text
    </span>
</root>

@code {
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string InputAction { get; set; }

    [Parameter]
    public InputGlyphSize GlyphSize { get; set; } = InputGlyphSize.Medium;

    private Texture GetInputGlyph()
    {
        // Use S&box's official Input.GetGlyph() method to get the proper input glyph
        // This automatically handles keyboard, gamepad, and other input devices
        return Input.GetGlyph(InputAction, GlyphSize, false);
    }
}
