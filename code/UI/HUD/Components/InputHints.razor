@using Sandbox;
@using Sandbox.UI;
@inherits Panel
@namespace Undercooked.UI

<root>
    @if (InteractionText is not null)
    {
        <InputHint Text="@InteractionText" InputAction="Interact" />
    }

    @if (AlternateInteractionText is not null)
    {
        <InputHint Text="@AlternateInteractionText" InputAction="AltInteract" />
    }
</root>

@code {
#nullable enable

    private string? InteractionText => Player.Local?.InteractableTarget?.GetInteractionText(Player.Local);

    private string? AlternateInteractionText => Player.Local?.InteractableTarget?.GetAlternateInteractionText(Player.Local);

    protected override int BuildHash() => System.HashCode.Combine(InteractionText, AlternateInteractionText);
}